{
  "manifest_version": 3,
  "name": "xAudibleIt",
  "description": "xAudibleIt is an extension that search for add to library button and add book in library.",
  "author": "exSnake",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "host_permissions": ["https://*/*"],
  "permissions": ["activeTab", "scripting", "storage"]
}
